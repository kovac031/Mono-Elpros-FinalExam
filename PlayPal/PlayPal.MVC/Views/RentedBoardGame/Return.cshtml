@model PlayPal.MVC.Models.RentedBoardGameView.RentedBoardGameReturnView

@{
    ViewBag.Title = "Return";
}

<h2>Return</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Return a Board Game</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.RentId, htmlAttributes: new { @class = "control-label col-md-2" })           
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Returned, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Returned)
                    @Html.ValidationMessageFor(model => model.Returned, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "RentedBoardGameList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
