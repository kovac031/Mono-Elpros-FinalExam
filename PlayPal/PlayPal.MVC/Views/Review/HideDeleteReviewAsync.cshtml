@model PlayPal.MVC.Models.ReviewVIEW

@{
    ViewBag.Title = "HideDeleteReviewAsync"; // kada stisne na gumb za Delete
}

<h2>You are about to delete the selected review!</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>ReviewVIEW</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "To delete this review, uncheck the box and click Save", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllReviewsAsync")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
